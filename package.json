    "koa-bodyparser": "^4.2.0",
    "koa-convert": "^1.2.0",
    "koa-i18n": "^2.1.0",
    "koa-json": "^2.0.2",
    "koa-locale": "^1.3.0",
    "koa-logger": "^2.0.1",
    "koa-onerror": "^3.1.0",
    "koa-router": "^7.1.1",
    "koa-static": "^3.0.0",
    "koa-views": "^6.0.2",
    "log4js": "^1.1.1",
    "lru-cache": "^4.0.2",
    "runkoa": "^1.5.9"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^4.0.1",
