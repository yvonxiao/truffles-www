    "koa-webpack-hot-middleware": "^1.0.3",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "should": "^11.2.1",
    "style-loader": "^0.16.1",
    "supertest": "^3.0.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.4.1",
