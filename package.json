  "private": true,
  "scripts": {
    "build-dev": "./node_modules/.bin/webpack --env=dev --progress --colors",
    "build-prod": "./node_modules/.bin/webpack --env=prod --progress --colors",
    "start": "NODE_ENV=dev ./node_modules/.bin/nodemon --ignore public/ --ignore views/ --ignore test/ bin/run",
    "koa": "NODE_ENV=dev ./node_modules/.bin/runkoa bin/www",
    "pm2": "NODE_ENV=prod pm2 start bin/run --name truffles-www",
    "pm2-restart": "NODE_ENV=prod pm2 restart bin/run --name truffles-www",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha -u bdd"
  },
  "dependencies": {
    "co": "^4.6.0",
    "debug": "^2.6.3",
    "ejs": "^2.5.6",
